<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Pantalla principal del médico -->
    <fragment
        android:id="@+id/medicoHomeFragment"
        android:name="com.medical.app.ui.medico.MedicoHomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_medico_home">

        <!-- Acciones de navegación -->
        <action
            android:id="@+id/action_medicoHomeFragment_to_patientListFragment"
            app:destination="@id/nav_patient" />
        <action
            android:id="@+id/action_medicoHomeFragment_to_newAppointmentFragment"
            app:destination="@id/newAppointmentFragment" />
        <action
            android:id="@+id/action_medicoHomeFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
        <action
            android:id="@+id/action_medicoHomeFragment_to_prescriptionsFragment"
            app:destination="@id/prescriptionsFragment" />
        <action
            android:id="@+id/action_medicoHomeFragment_to_reportsFragment"
            app:destination="@id/reportsFragment" />
        <action
            android:id="@+id/action_medicoHomeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_medicoHomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Pantalla de Inicio de Sesión -->
    <!-- Global actions -->
    <action
        android:id="@+id/action_global_to_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />
    
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.medical.app.ui.auth.LoginFragment"
        android:label="Iniciar Sesión"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_loginFragment_to_medicoHomeFragment"
            app:destination="@id/medicoHomeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        
        <action
            android:id="@+id/action_loginFragment_to_patientHomeFragment"
            app:destination="@id/patientHomeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true">
            <argument
                android:name="patientId"
                app:argType="long" />
        </action>
    </fragment>

    <!-- Pantalla de Registro -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.medical.app.ui.auth.RegisterFragment"
        android:label="Registro de Usuario"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

    <!-- Pantalla Principal -->
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.medical.app.ui.main.MainFragment"
        android:label="Principal"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Patient Home Fragment -->
    <fragment
        android:id="@+id/patientHomeFragment"
        android:name="com.medical.app.ui.patient.PatientHomeFragment"
        android:label="Inicio del Paciente"
        tools:layout="@layout/fragment_patient_home">

        <argument
            android:name="patientId"
            app:argType="long" />
            
        <action
            android:id="@+id/action_patientHome_to_registroConsultaFragment"
            app:destination="@id/registroConsultaFragment" />
            
        <action
            android:id="@+id/action_patientHome_to_patientPrescriptions"
            app:destination="@id/patientPrescriptionsFragment" />
            
        <action
            android:id="@+id/action_patientHome_to_patientProfile"
            app:destination="@id/patientProfileFragment" />
            
        <action
            android:id="@+id/action_patientHome_to_patientAppointments"
            app:destination="@id/patientAppointmentsFragment" />

    </fragment>
    
    <!-- Register Consulta -->
    <fragment
        android:id="@+id/registroConsultaFragment"
        android:name="com.medical.app.ui.consulta.RegistroConsultaFragment"
        android:label="Registrar Consulta"
        tools:layout="@layout/fragment_registro_consulta">
        <argument
            android:name="patientId"
            app:argType="string" />
    </fragment>

    <!-- Patient Prescriptions -->
    <fragment
        android:id="@+id/patientPrescriptionsFragment"
        android:name="com.medical.app.ui.patient.PatientPrescriptionsFragment"
        android:label="Mis Recetas"
        tools:layout="@layout/fragment_patient_prescriptions" />
        
    <!-- Patient Profile -->
    <fragment
        android:id="@+id/patientProfileFragment"
        android:name="com.medical.app.ui.patient.PatientProfileFragment"
        android:label="Mi Perfil"
        tools:layout="@layout/fragment_patient_profile">
        
        <argument
            android:name="patientId"
            app:argType="long" />
    </fragment>
    
    <!-- Patient Appointments -->
    <fragment
        android:id="@+id/patientAppointmentsFragment"
        android:name="com.medical.app.ui.patient.PatientAppointmentsFragment"
        android:label="Mis Citas"
        tools:layout="@layout/fragment_patient_appointments" />
    
    <!-- Patient Management Navigation Graph -->
    <include app:graph="@navigation/nav_patient" />

    <!-- Other App Destinations -->
    <fragment
        android:id="@+id/newAppointmentFragment"
        android:name="com.medical.app.ui.appointment.NewAppointmentFragment"
        android:label="Nueva Cita">
        <argument
            android:name="appointmentId"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.medical.app.ui.schedule.ScheduleFragment"
        android:label="Agenda">
        <action
            android:id="@+id/action_scheduleFragment_to_newAppointmentFragment"
            app:destination="@id/newAppointmentFragment" />
    </fragment>

    <fragment
        android:id="@+id/prescriptionsFragment"
        android:name="com.medical.app.ui.prescription.PrescriptionsFragment"
        android:label="Recetas" />

    <fragment
        android:id="@+id/reportsFragment"
        android:name="com.medical.app.ui.reports.ReportsFragment"
        android:label="Reportes">
        <action
            android:id="@+id/action_reportsFragment_to_aiReportFragment"
            app:destination="@id/aiReportFragment" />
    </fragment>

    <fragment
        android:id="@+id/aiReportFragment"
        android:name="com.medical.app.ui.reports.AiReportFragment"
        android:label="Reporte AI">
        <argument
            android:name="reportType"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.medical.app.ui.settings.SettingsFragment"
        android:label="Configuración">
        <action
            android:id="@+id/action_settingsFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
